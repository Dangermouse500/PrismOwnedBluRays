<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismOwnedBluRays.Views.MainPage"
             xmlns:prism="http://prismlibrary.com"
             Title="{Binding Title}">

    <Grid>        <Grid.RowDefinitions>            <RowDefinition Height="0.66*"/>            <RowDefinition Height="0.33*"/>        </Grid.RowDefinitions>        <Grid.ColumnDefinitions>            <ColumnDefinition Width="0.5*"/>            <ColumnDefinition Width="0.5*"/>        </Grid.ColumnDefinitions>        <Image Source="blu_ray_logo.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>        <Button Text="+" Style="{StaticResource buttonStyle}"                Command="{Binding GoToAddBluRayCmd}" Grid.Row="1" Grid.Column="0"/>        <Button Text="Show owned blu rays" Style="{StaticResource buttonStyle}"                Command="{Binding GoToViewOwnedBluRaysCmd}" Grid.Row="1" Grid.Column="1"/>    </Grid>


</ContentPage>