<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PrismOwnedBluRays.Views.ShowBluRayDetails"
             Title="{Binding Title}">


    <Grid x:Name="Item">        <Grid.RowDefinitions>            <RowDefinition Height="0.7*" />            <RowDefinition Height="0.3*" />        </Grid.RowDefinitions>        <Grid.ColumnDefinitions>            <ColumnDefinition Width="0.3*" />            <ColumnDefinition Width="0.3*" />            <ColumnDefinition Width="0.3*" />        </Grid.ColumnDefinitions>
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <Label HorizontalOptions="Center" >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding BluRayDetail.BluRayTitle}" FontSize="Header"/>
                        <Span Text=" "/>
                        <Span Text="{Binding BluRayDetail.BluRayYearOfRelease, StringFormat='({0})'}" FontSize="Title"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="{Binding BluRayDetail.BluRayGenre}" HorizontalOptions="Center" FontSize="Title"/>
            <Label Text="{Binding BluRayDetail.BluRayActors}" HorizontalOptions="Center" FontSize="Title"/>
            <Label Text="{Binding BluRayDetail.BluRayDirector}" HorizontalOptions="Center" FontSize="Title" />
            <Image Source="{Binding BluRayDetail.BluRayPoster}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        </StackLayout>

        <Button Text="Save" HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="20" Grid.Row="1" Grid.Column="0"
                Style="{StaticResource buttonStyle}" Command="{Binding SaveBluRayCmd}" IsVisible="{Binding SaveButtonIsVisible}" />

        <Button Text="Cancel" HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="20" Grid.Row="1" Grid.Column="1"
                Style="{StaticResource buttonStyle}" Command="{Binding ReturnToAddBluRayCmd}" IsVisible="{Binding CancelButtonIsVisible}" />

        <Button Text="Main menu" HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="20" Grid.Row="1" Grid.Column="2"
                Style="{StaticResource buttonStyle}" Command="{Binding GoToMainMenuCmd}" IsVisible="{Binding MainMenuButtonIsVisible}" />
    </Grid>
</ContentPage>